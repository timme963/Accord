<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" prefHeight="360.0" prefWidth="580.0"
      xmlns="http://javafx.com/javafx/11.0.1">
    <children>
        <VBox alignment="CENTER" prefHeight="108.0" prefWidth="580.0">
            <children>
                <Label id="label_langSelect" style="-fx-font-size: 16;" text="%label.select_language">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
                <ComboBox id="comboBox_langSelect" prefHeight="25.0" prefWidth="137.0" promptText="English"/>
            </children>
            <padding>
                <Insets bottom="20.0" top="14.0"/>
            </padding>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="69.0" prefWidth="184.0">
            <children>
                <Label id="label_themeSelect" alignment="CENTER" layoutX="22.0" style="-fx-font-size: 16;"
                       text="%label.select_theme">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <VBox id="darkMode" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <ImageView fitHeight="175.0" fitWidth="272.0" focusTraversable="true"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../icons/DarkMode.jpg"/>
                                    </image>
                                </ImageView>
                            </children>
                        </VBox>
                        <VBox id="brightMode" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <ImageView fitHeight="174.0" fitWidth="274.0" focusTraversable="true"
                                           pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../icons/BrightMode.jpg"/>
                                    </image>
                                </ImageView>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </HBox>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
</VBox>
